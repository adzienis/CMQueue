<h1> Course </h1>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="mb-2">
      <label class="form-label fw-bold"> Name </label>
      <div>
        <%= @course.name %>
      </div>
    </div>
    <div class="mb-2">
      <label class="form-label fw-bold"> Instructor Code </label>
      <div>
        <%= @course.instructor_code %>
      </div>
    </div>
    <div class="mb-2">
      <label class="form-label fw-bold"> TA Code </label>
      <div>
        <%= @course.ta_code %>
      </div>
    </div>
    <div class="mb-2">
      <label class="form-label fw-bold"> Student Code </label>
      <div>
        <%= @course.student_code %>
      </div>
    </div>
    <div class="mb-2">
      <label class="form-label fw-bold"> Open </label>
      <div>
        <%= @course.open ?
              tag.span("Course is currently open", style: "color: green") :
              tag.span("Course is currently closed", style: "color: red") %>
      </div>
    </div>
    <hr>
    <div class="d-grid" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))">
      <div class="mb-2">
        <label class="form-label fw-bold"> Total Enrollment </label>
        <div>
          <%= @course.enrollments.undiscarded.count %>
        </div>
      </div>
      <div class="mb-2">
        <label class="form-label fw-bold"> Total Students </label>
        <div>
          <%= @course.active_students.count %>
        </div>
      </div>
      <div class="mb-2">
        <label class="form-label fw-bold"> Total TA's </label>
        <div>
          <%= @course.active_tas.count %>
        </div>
      </div>
      <div class="mb-2">
        <label class="form-label fw-bold"> Total Instructors </label>
        <div>
          <%= @course.active_instructors.count %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer d-flex">
    <div style="flex: 1"></div>
    <div>
      <%= link_to "Edit Course", edit_course_path(@course), class: "btn btn-warning" %>
    </div>
  </div>
</div>