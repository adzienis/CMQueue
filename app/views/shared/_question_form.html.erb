<%= form_with url: questions_url,
              model: question, class: 'ui form', local: false do |form| %>
  <%= hidden_field :question, :user_id, value: current_user.id %>
  <div class="field fluid">
    <%= form.label "Queue" %><br>
    <%= form.select :question_queue_id, @course.question_queues.ids %>
  </div>
  <div class="field fluid">
    <%= form.label "Description" %><br>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label "What Have You Tried?" %><br>
    <%= form.text_field :tried %>
  </div>

  <div class="field">
    <%= form.label "Location" %><br>
    <%= form.text_field :location %>
  </div>

  <%= form.submit "submit" %>
<% end %>