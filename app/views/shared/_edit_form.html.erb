<% options ||= {} %>
<% options[:except] ||= [] %>
<% options[:disabled] ||= [] %>

<%= simple_form_for model_instance, url: polymorphic_path([@course, model_instance]), defaults: {
  wrapper_html: {
    class: "mb-2",
  },
  input_html: {
    class: "mb-2" } }, html: { autocomplete: 'off' } do |f| %>
  <%= f.hidden_field :course_id, value: params[:course_id] if params[:course_id] %>
  <% model_instance.class.content_columns
                   .reject { |v| options&.dig(:except)&.include? v.name.to_sym }
                   .reject { |v| [:id, :created_at, :updated_at, :discarded_at].include? v.name.to_sym }
                   .each do |col| %>
    <b>
      <%= f.input col.name, html5: true %>
    </b>
  <% end %>

  <% [:has_many, :belongs_to]
       .collect { |s| model_instance.class.reflect_on_all_associations(s) }
       .flatten
       .reject { |v| options&.dig(:except)&.include? v.name.to_sym }
       .reject { |v| [:course].include? v.name }
       .each do |ass| %>

    <div data-controller="react-select" class="mb-3">
      <%= f.association ass.name,
                        value_method: :id,
                        disabled: options[:disabled].include?(ass.name),
                        label_method: ->(v) {
                          return v[:name] if v[:name]
                          return "#{v[:given_name]} #{v[:family_name]}" if v[:given_name] && v[:family_name]
                          return v[:id] if v[:id]
                        },
                        collection: (
                          if params[:course_id]
                            ass.klass.methods.include?(:with_course) ? ass.klass.accessible_by(current_ability).with_course(Course.find(params[:course_id])).distinct : ass.klass.accessible_by(current_ability).distinct
                          else
                            ass.klass.accessible_by(current_ability).distinct
                          end
                        )
      %>
    </div>
  <% end %>

  <%= f.submit :Update, class: "btn btn-primary", "data-disable-with": false, "data-turbo": false %>
<% end %>