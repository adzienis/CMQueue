<%= form_with url: user_settings_path(current_user), method: :patch do |f| %>

  <ul class="list-group">
  <% @settings.each do |setting| %>
    <% case setting.setting_type %>
    <% when "boolean" %>
        <li class="list-group-item d-flex justify-content-between align-items-center mb-2">
          <%= f.label setting.id, class: "form-check-label d-block" %>
          <%= f.check_box setting.id, {checked: setting.value == "true", html: {class: "form-check-control d-block" }}%>
        </li>
    <% end %>
  <% end %>
  <%= f.submit :Update, class: "btn btn-primary", style: "width: min-content"%>
  </ul>

<% end %>