<h2 class="mb-3">
  <b>
    Queue Settings
  </b>
</h2>

<div class="card mb-2">
  <div class="card-body">
    <h2>
      Create a New Queue
    </h2>
    <div>
      <%= form_with url: tags_url, scope: :tag do |form| %>
        <%= form.hidden_field :course_id, value: @course.id %>
        <div class="mb-2">
          <%= form.label :name, "Name" %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-2">
          <%= form.label :description, "Description" %>
          <%= form.text_field :description, class: 'form-control' %>
        </div>
        <%= form.submit "Create", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-body">

    <h2 class="mb-2" id="queues">
      Queues
    </h2>

    <div class="list-group list-group-flush">
      <% @tags.each do |tag| %>
        <div class="list-group-item d-flex justify-content-center align-items-center">
          <h5 class="mb-0" style="flex: 1">
            <%= tag.name %>
          </h5>
          <div class="btn-group ">
            <%= button_to "To Queue", course_tag_path(tag.course, tag.id), class: "btn btn-primary mr-2", method: :get %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>