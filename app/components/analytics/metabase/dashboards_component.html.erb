<div class="card card-body">
  <table class="table table-hover table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% dashboards.each do |dashboard| %>
      <tr>
        <td><%= link_to dashboard.name, analytics_metabase_dashboard_path(dashboard.id, course_id: course.id), target: "_top" %> </td>
        <td><%= dashboard.description %></td>
        <td class="d-flex">
          <div style="flex: 1"></div>
          <div class="dropdown">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
              Actions
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
              <li><%= link_to "Show", analytics_metabase_dashboard_path(dashboard.id, course_id: course.id),
                              target: "_top",
                              class: "dropdown-item" %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
