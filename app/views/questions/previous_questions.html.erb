<div class="container mt-4">
  <div class="mt-4 mb-4">
    <nav class="
        navbar
        navbar-expand-lg
        navbar-light
        shadow-sm
        bg-light
"
    >
      <div class="container-fluid justify-content-md-center">
        <ul class="navbar-nav">

          <%= content_tag :li,
                          class: "nav-item" do %>
            <%= link_to "Back",
                        "",
                        class: "nav-link",
                        onclick: "event.preventDefault(); window.history.back()"
            %>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>

  <h4>
    Previous Questions
  </h4>
  <% if @previous_questions.count == 0 %>
    <div class="alert alert-warning">
      No Questions
    </div>
  <% end %>
  <div class="list-group">
    <% @previous_questions.each do |question| %>
      <%= link_to question_path(question), class: "text-decoration-none", style: 'color: inherit' do %>
        <div class="list-group-item">
          <div>
            <b>
              <%= question.question_state.created_at.to_formatted_s(:short) %>
            </b>
          </div>
          <div class="elipsis">
            <%= question.description %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>