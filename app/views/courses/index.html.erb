<div class="container mt-4">

  <h2>
    Courses
  </h2>

  <%= button_to "Add New Course", new_course_path, method: :get, class: 'btn btn-primary' %>

  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th scope="col">
        Name
      </th>

    </tr>
    </thead>
    <tbody>
    <% @courses.each do |course| %>
      <tr onclick=<%= "window.location='#{course_path(course)}'" %> >
        <td class="card-body">
          <%= course.name %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>