<% content_for :courses_content do %>
  <div class="card">
    <div class="card-body">
      <%= form_with model: @course do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :ta_code %>
          <%= form.text_field :ta_code, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :instructor_code %>
          <%= form.text_field :instructor_code, class: 'form-control' %>
        </div>
        <%= form.submit "Submit" %>
      <% end %>
    </div>
  </div>

<% end %>

<%= render template: 'layouts/courses' %>