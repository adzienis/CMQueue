<div id="question-form">
  <%= render(Forms::Question::QuestionStateModalComponent.new(course: course, question: question)) %>

  <%= tag.div class: "card w-100 shadow-sm #{creator_classes}",
              style: creator_styles do %>
    <div class="card-body">
      <div class="card-title">
        <h3>
          Ask a Question
        </h3>
        <p class="text-muted">
          Use the form below to ask your question to the staff.
        </p>

        <%= tag.h1 class: "badge bg-primary" do %>
          Frozen
        <% end if question.frozen? %>
        <hr>
        <%= tag.div do %>
          <%= tag.h1 do %>
            <%= "#{question.question_state.user.given_name} is answering your question." %>
            <%= tag.span class: "badge bg-success" do %> Resolving
            <% end %>
            <hr>
          <% end %>
        <% end if question.resolving? %>
      </div>
      <turbo-frame id="form">
        <%= render(Forms::Question::FormComponent.new(question_form: question_form,
                                                      course: course,
                                                      current_user: current_user
        )) %>
      </turbo-frame>
    </div>
  <% end %>
</div>