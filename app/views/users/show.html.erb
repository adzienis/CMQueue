<div class="container mt-4">
  <div class="mt-4 mb-4">
    <nav class="
        navbar
        navbar-expand-lg
        navbar-light
        shadow-sm
        bg-light
"
    >
      <div class="container-fluid justify-content-md-center">
        <ul class="navbar-nav">

          <%= content_tag :li,
                          class: "nav-item " do %>
            <%= link_to "Back",
                        :back,
                        class: "nav-link",
                        onclick: "event.preventDefault(); window.history.back()"
            %>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>


  <div class="card mb-3">
    <div class="card-body">
      <h2>
        <%= "#{@user.given_name} #{@user.family_name}" %>
      </h2>
    </div>
  </div>

  <div>
    <h3>
      <%= link_to "All Questions", user_questions_path(@user, course_id: params[:course_id]) %>
    </h3>
  </div>
</div>