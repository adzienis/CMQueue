<%= tag.hr class: "mb-1 mt-1" if edit? || destroy? %>
<%= link_to "Edit #{record.model_name.human.titleize}",
            polymorphic_path([:edit, course, record]), class: "fw-bold" if edit? %>
<%= "|" if destroy? && edit? %>
<%= link_to "Remove #{record.model_name.human.titleize}",
           polymorphic_path([course, record]),
           class: "fw-bold",
           method: :delete,
           "data-confirm": "Are you sure?" if destroy? %>
