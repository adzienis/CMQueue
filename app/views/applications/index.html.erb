<h1>
  Applications
</h1>

<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
    <tr>
      <th>Actions</th>
      <th>Name</th>
      <th>Description</th>
    </tr>
    </thead>
    <tbody>

    <% @applications.each do |app| %>
      <tr>
        <td>
          <div>

            <%= link_to course_application_path(@course, app) do %>
              <i class="fas fa-info-circle me-1"></i>
            <% end %>
          </div>
        </td>
        <td><%= app.name %></td>
        <td><%= app.name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>