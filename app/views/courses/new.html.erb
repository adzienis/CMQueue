<div class="container mt-4">

  <h2>
    Add a New Course
  </h2>

  <div class="card">
    <div class="card-body">
      <%= form_with url: courses_url, scope: :course do |form| %>
        <div class="mb-3">
          <%= form.label :name, "Name", class: "form-label" %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <%= form.submit "Submit" %>
      <% end %>
    </div>
  </div>
</div>