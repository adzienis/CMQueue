<% content_for :content do %>
  <div class="sidebar" style="display: flex; flex-direction: row; ">
      <%= render partial: "shared/admin_sidebar" %>
      <button class="btn btn-outline-secondary sidebar-opener" onclick="event.preventDefault(); toggle()">
        <i class="fas fa-chevron-right"></i>
      </button>

    <div id='courses-container' style="min-height: calc(100vh - 76px);" class="container mt-4 mb-5">
      <%= content_for?(:admins_content) ? yield(:admins_content) : yield %>
    </div>
  </div>
<% end %>

<%= render template: "layouts/application" %>